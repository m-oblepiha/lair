{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "redux/*": ["app/redux/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": { "customMatcher": "\\.scss$" }
      }
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noErrorTruncation": true
  }
}
